@model ResumeProject.Models.Tbl_Profile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateProfile</h2>

<form method="post">

    @Html.HiddenFor(x => x.ProfileID, new { @class = "form-control" })
    <br />

    <label>Profile Title</label>
    @Html.TextBoxFor(x => x.ProfileTitle, new
{ @class = "form-control" })
    <br />

    <label>Profile Description</label>
    @Html.TextBoxFor(x => x.ProfileDescription, new
{ @class = "form-control" })
    <br />

    <label>Name</label>
    @Html.TextBoxFor(x => x.Name, new
{ @class = "form-control" })
    <br />

    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new
{ @class = "form-control" })
    <br />

    <label>Address</label>
    @Html.TextBoxFor(x => x.Address, new
{ @class = "form-control" })
    <br />

    <label>Phone</label>
    @Html.TextBoxFor(x => x.Phone, new
{ @class = "form-control" })
    <br />

    <label>Social Media1</label>
    @Html.TextBoxFor(x => x.SocialMedia1, new
{ @class = "form-control" })
    <br />

    <label>Social Media2</label>
    @Html.TextBoxFor(x => x.SocialMedia2, new
{ @class = "form-control" })
    <br />

    <label>Social Media3</label>
    @Html.TextBoxFor(x => x.SocialMedia3, new
{ @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Save</button>

</form>